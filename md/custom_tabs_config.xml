                <do_if value="md.MCT_Config.Vault.$customTabs.$resetConfirm == 0">
                    <signal_cue_instantly
                            cue="md.Simple_Menu_API.Update_Widget"
                            param="table[
                                $id = 'resetText',
                                $text = {26124, 223},
                                $color = 'Helper.color.red',
                            ]"/>
